<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ArubaTranquility" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/container_generic</item>
        <item name="colorPrimaryVariant">@color/background</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/container_light_blue</item>
        <item name="colorSecondaryVariant">@color/container_blue</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
    </style>

    <style name="Button.Default" parent="Theme.ArubaTranquility">
        <item name="colorAccent">@color/link_blue</item>
        <item name="colorPrimary">@color/link_blue</item>
    </style>

    <style name="Button.Info" parent="Theme.ArubaTranquility">
        <item name="colorAccent">@color/container_light_blue</item>
        <item name="colorPrimary">@color/container_light_blue</item>
    </style>

    <style name="Button.Success" parent="Theme.ArubaTranquility">
        <item name="colorAccent">@color/success_green</item>
        <item name="colorPrimary">@color/success_green</item>
    </style>

    <style name="Button.Warning" parent="Theme.ArubaTranquility">
        <item name="colorAccent">@color/warning_orange</item>
        <item name="colorPrimary">@color/warning_orange</item>
    </style>

    <style name="Button.Danger" parent="Theme.ArubaTranquility">
        <item name="colorAccent">@color/error_red</item>
        <item name="colorPrimary">@color/error_red</item>
    </style>
</resources>